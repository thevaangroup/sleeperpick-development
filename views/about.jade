extends ./templates/_layout

block theContent


	// =============== wrapper =============== 
	#wrapper
		// =============== Content holder  ===============
		.content-holder.elem.scale-bg2.transition3
			// Fixed title
			.fixed-title
				span Welcome
			// Fixed title end
			// =============== Content  ===============
			.content.full-height.big-index
				.full-height-wrap(data-top-bottom="transform: translateY(250px);" data-bottom-top="transform: translateY(-250px);")
